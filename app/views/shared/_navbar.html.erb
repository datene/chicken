<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "chicken.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">


    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if params[:action] == "show" && params[:controller] == "challenges" && @challenge.status != "pending" %>
        <i class="fa fa-bars fa-2x dropdown-toggle yellow_dropdown" data-toggle="dropdown"></i>
        <% else %>
        <i class="fa fa-bars fa-2x dropdown-toggle white_dropdown" data-toggle="dropdown"></i>
        <% end %>
<!--         <div class="badge badge-yellow">3</div>
 -->        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <!-- Different navigation if login or not -->
          <% if user_signed_in? %>

          <!-- Notification -->
          <li><%= link_to dashboard_path , class: "navbar-wagon-item" do %>
            <i class="fa fa-dashboard"></i>  <%= t ".top_call_to_action", default: "Dashboard" %>
          <% end %>
          </li>
          <li><%= link_to about_path, class: "navbar-wagon-item" do %>
                <i class="fa fa-info-circle"></i>  <%= t ".top_call_to_action", default: "About" %>
              <% end %>
          </li>
          <!-- Do we need this? -->
         <!--  <li><%#= link_to t(".top_call_to_action", default: "Rules"), "#", class: "navbar-wagon-item" %>
          </li>
          <li><%#= link_to t(".top_call_to_action", default: "Contact us"), "#", class: "navbar-wagon-item" %>
          </li> -->

          <!-- Profile picture and dropdown -->
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
            <% end %>
          </li>

          <% else %>

          <!-- Login text link -->
          <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
          <i class="fa fa-sign-in"></i>  <%= t ".sign_in", default: "Log in" %>
          <% end %>

          <% end %>
        </div>

        <!-- Dropdown list appearing on mobile only -->
      </ul>
    </div>
  </div>
</div>

