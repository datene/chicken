<div class="week">
  Finished  
</div>
<h1><%=@challenge.activity.upcase%></h1>
<div class="playerbox">

<% case challenge_decorator.winner %>
<% when :creator %>
  <p class="player-item"><span><i class="fa fa-trophy"></i><%= @challenge.creator.first_name %></span></p>
  <p class="player-item grey">vs.</p>
  <p class="player-item"><%= @challenge.challenger.first_name %></p>
<% when :challenger %>
  <p class="player-item"><%= @challenge.creator.first_name %></p>
  <p class="player-item grey">vs.</p>
  <p class="player-item"><span><i class="fa fa-trophy"></i><%= @challenge.challenger.first_name %></span></p>
<% when :tie %>
  <p class="player-item"><span><i class="fa fa-trophy"></i><%= @challenge.creator.first_name %></span></p>
  <p class="player-item grey">vs.</p>
  <p class="player-item"><span><i class="fa fa-trophy"></i><%= @challenge.challenger.first_name %></span></p>
<% end %>
</div>