<div class="new_challenge">
  <%=simple_form_for @challenge do |f| %>
  <div id="q1" class="question">
    <p>What do you want to do more often?</p>
    <%= f.input :activity, class: "new_challenge_input" %>
  </div>
  <div id="q2" class="question">
    <p>Who do you want to do it with?</p>
    <%= f.input :email_challenger, class: "new_challenge_input" %>
  </div>
  <div id="q3" class="question">
    <p>How confident are you?</p>
    <%= f.input :wager_amount, class: "new_challenge_input" %>
  </div>
  <div id="su" class="question summary"> 
    <p>summary</p>
    <%= f.submit "Let's do it!", class: "summary_submit" %>
    <% end %>
  </div>
</div>


