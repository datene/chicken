<div class="challenge_status">
    <div class="avatarbox">
      <%= image_tag challenge.creator.picture, class: "avatar avatar_shadow box-item creator borderavatar" %>
      <% if challenge.challenger != nil %>
        <%= image_tag challenge.challenger.picture, class: "avatar avatar_shadow box-item challenger borderavatar" %>
      <% else %>
        <%= image_tag "http://static1.squarespace.com/static/55b0eea6e4b0eac970b56fa2/t/567c8e6de0327cd48acb8afe/1451003519533/chicken-sombrero.gif", class: "avatar box-item challenger borderavatar" %>
      <% end %>
    </div>
    <h1><%=challenge.activity.upcase%></h1>
    <div class="week">
      Week <%= challenge_decorator.current_week %>
    </div>
    <div class="playerbox">
      <p class="player-item"><%= challenge.creator.first_name %></p><p class="player-item grey">vs.</p>
      <p class="player-item">
        <% if challenge.challenger != nil %>
          <%= challenge.challenger.first_name %>
        <% else %>
          <%= challenge.name %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="wagers">
    <div class="wager creator">
      <div class="euro">&#8364;</div>
      <div><%= challenge_decorator.current_amounts[:creator].round %></div>
    </div>
    <div class="wager filler"></div>
    <div class="wager challenger">
      <div class="euro">&#8364;</div>
      <div><%= challenge_decorator.current_amounts[:challenger].round %></div>
    </div>
  </div>
  <div class="creatorwagerbar" style="width: <%= challenge_decorator.bar_values[:creator] %>%;"></div>
  <div class="challengerwagerbar" style="width: <%= challenge_decorator.bar_values[:challenger] %>%;"></div>
  <div class="score">
    <h2>score</h2>
    <div class="avatarbox-score allotment">
      <div class="challenge-avatar avatar_shadow" style="<%= "transform: scale(#{challenge_decorator.logged_times_ratios[:creator]}); background: linear-gradient(rgba(0, 0, 0, 0.54), rgba(0, 0, 0, 0.48)), url(#{challenge.creator.picture})" %>">
      <span class="logging-times-avatar"><%= challenge_decorator.logged_times_amounts_in_hours[:creator] %>h <%= challenge_decorator.logged_times_amounts_plus_minutes[:creator] %> min </span>
      </div>
      <div class="alloted"><%= challenge.allotment %></div>
      <% if challenge.challenger != nil %>
        <div class="challenge-avatar avatar_shadow" style="<%= "transform: scale(#{challenge_decorator.logged_times_ratios[:challenger]}); background: linear-gradient(rgba(0, 0, 0, 0.54), rgba(0, 0, 0, 0.48)), url(#{challenge.challenger.picture})" %>"  >
        <span class="logging-times-avatar"><%=  challenge_decorator.logged_times_amounts_in_hours[:challenger] %> h <%= challenge_decorator.logged_times_amounts_plus_minutes[:challenger] %> min </span>
        </div>
      <% else %>
<!--        <div class="challenge-avatar" style="<%#= "transform: scale(#{challenge_decorator.logged_times_ratios[:challenger]}); background: linear-gradient(rgba(0, 0, 0, 0.54), rgba(0, 0, 0, 0.48)), url("http://static1.squarespace.com/static/55b0eea6e4b0eac970b56fa2/t/567c8e6de0327cd48acb8afe/1451003519533/chicken-sombrero.gif")" %>"  >
        </div> -->
        <%= image_tag "http://static1.squarespace.com/static/55b0eea6e4b0eac970b56fa2/t/567c8e6de0327cd48acb8afe/1451003519533/chicken-sombrero.gif", class: "avatar-small", style: "transform: scale(#{challenge_decorator.logged_times_ratios[:challenger]})" %>
      <% end %>
    </div>
  </div>