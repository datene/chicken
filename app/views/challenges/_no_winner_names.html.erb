<div class="week">
  <% if challenge_decorator.ongoing? %>
    Week <%= challenge_decorator.current_week %>
  <% else %>
    Starting on <%= l(challenge.start_date) %>
  <% end %>
</div>
<h1><%=challenge.activity.upcase%></h1>
<div class="playerbox">
  <p class="player-item"><%= challenge.creator.first_name %></p>
  <p class="player-item grey">vs.</p>
  <p class="player-item">
    <% if challenge.challenger != nil %>
      <%= challenge.challenger.first_name %>
    <% else %>
      <%= challenge.name_challenger %>
    <% end %>
  </p>
</div>