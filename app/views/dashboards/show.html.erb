<div class="dashboard">
  <div class="user_info">
    <div class="user_photo">
      <%= image_tag current_user.picture, class:"avatar avatar_border" %>
    </div>
    <div class="user_name">
      <%= current_user.first_name%>
      <%= current_user.last_name%>
    </div>
    <div class="challenges_amount">
      <%= @challenges.count %>
      <h3>challenges</h3>      
    </div>
    <div class="challenges_amount">
      <%= @sum_logged_times %>      
      <h3>hours logged</h3>
    </div>
  </div>

  <div class="challenges_index">
    <div class="page_title">
      <h1>
        ALL YOUR CHALLENGES BELONG TO US
      </h1>
    </div>
    <ul class="index">
      <% @challenges.each do |challenge| %>
      <div class="index-challenge-card">
        <div class="challenge-specs">
          <h2><%= challenge.name %></h2>
          <p><%= @opponent.first_name %></p>
        </div>
        <img class="card-user avatar" src="<%= @opponent.picture %>">
        <div class="status">
        <p><%= challenge.status %></p> 
        <% if challenge.status == "pending" %>
        <%= link_to "Accept", accept_challenge_path(challenge), method: :patch, data: { confirm: "Are you sure you're taking on this challenge?"} %> 
        <%= link_to "Decline", decline_challenge_path(challenge), method: :patch, data: { confirm: "Are you sure you don't want to take on this challenge?"} %> 
        <% elsif challenge.status == "accepted" %>
        <%= link_to "Concede", concede_challenge_path(challenge), method: :patch,data: { confirm: "Are you sure you want to chicken out?"} %>
        <% else %>
        <%= link_to "Destroy", challenge_path(challenge), method: :delete, data: { confirm: "Are you sure you want to delete this challenge from your list?"} %>
        <% end %>
        </div>
      </div>
      <% end %>
    </ul>
  </div>
</div>